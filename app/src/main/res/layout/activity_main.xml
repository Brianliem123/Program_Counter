<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/ln_layout_main_activity"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:padding="20dp">

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/angka_nol"
        android:textSize="@dimen/Default_Text_tvCount"
        android:textAlignment="center"
        android:textColor="@color/color_angka"/>

    <Button
        android:id="@+id/btn_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_btn_count_en"
        android:textSize="40sp"
        android:background="@drawable/shape_background"
        android:textColor="@color/color_angka"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_btn_reset"
        android:textSize="40sp"
        android:background="@drawable/shape_button_bottom"
        android:textColor="@color/color_angka"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>

